/*
  Variables
*/

blue = #125688
offwhite = #fafafa
lightgrey  = #EDEEED
lightgray = lightgrey // OH Canada!

html
  font-size 12px
  font-family Helvetica Neue, Helvetica, Arial, sans-serif
  font-weight 300

p
  font-size 1.6rem
  line-height 1.5

h1
  font-size 10rem

h2
  font-size 6rem

h3
  font-size 3rem

h1, h2, h3
  font-family 'Neucha', cursive;
  text-align center
  font-weight 100
  margin 2rem 0
  letter-spacing -1px
  text-shadow 0px 4px 0 rgba(18, 86, 136, 0.11)
  a
    color blue
    text-decoration none
    &:focus
      outline 0
    &:hover
      text-decoration none
      color lightblue
